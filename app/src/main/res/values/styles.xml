<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditText">
        <item name="android:textColorHint">#222222</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyButton">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">@dimen/main_body_text_size_14</item>
        <item name="android:textColor">@color/material_textBlack_text</item>
    </style>

    <style name="MyTextView">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/main_body_text_size_14</item>
    </style>

    <style name="MyTextView_16">
        <item name="android:textColor">@color/material_textBlack_text</item>
        <item name="android:textSize">@dimen/small_title_text_size_16</item>
    </style>

    <!--DatePickerDialog动画-->
    <style name="dateAnimation">
        <item name="android:windowEnterAnimation">@anim/datepicker_in_animation</item>
        <item name="android:windowExitAnimation">@anim/datepicker_out_animation</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check</item>
    </style>

    <style name="checkbox_x" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_x</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <!--<item name="android:background">#000</item>-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->

    </style>
</resources>

