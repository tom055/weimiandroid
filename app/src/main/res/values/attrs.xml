<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TopBar">
        <attr name="title" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="leftDrawable" format="reference|color"/>
        <attr name="rightDrawable" format="reference|color"/>
        <attr name="rightDrawableVisible" format="reference" />

        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color" />
    </declare-styleable>


    <declare-styleable name="MyToolBar">
        <attr name="mytoolbar_title" format="string" />
        <attr name="mytoolbar_titleTextSize" format="dimension" />
        <attr name="mytoolbar_titleTextColor" format="color" />
    </declare-styleable>

</resources>