<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.dql.g150t.fyhs.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_min_height_56"
        android:background="@color/material_white"
        app:leftDrawable="@mipmap/icon_back"
        app:rightDrawable="@mipmap/login"
        app:title="注册成功"
        app:titleTextColor="@color/black"
        app:titleTextSize="@dimen/topbar_text_size_17" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_success" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册成功"
            android:layout_marginTop="7dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FB5E00"
            android:layout_marginTop="2dp"
            android:text="已为您奉上新手礼包"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FB5E00"
            android:layout_marginTop="1dp"
            android:text="请在【我的】-【优惠券】中查看"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.8">
        <Button
            android:id="@+id/btn_invest"
            android:layout_width="295dp"
            android:layout_height="44dp"
            android:text="立即理财"
            android:textColor="@color/material_white"
            android:textSize="17dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/red_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.8">
        <Button
            android:id="@+id/btn_red_packet"
            android:layout_width="295dp"
            android:layout_height="44dp"
            android:text="查看红包"
            android:textColor="@color/material_white"
            android:textSize="17dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/red_button_alpha"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示:"
            android:layout_marginLeft="20dp"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="交易密码默认为：123456  为了您的交易安全，请登录后请在【我的】-【系统设置】-【修改交易密码】中修改交易密码！"
            android:textColor="#EA2A2A"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>
