<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/material_white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是标号"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#222222"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_title" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="25dp"
            android:text="12%"
            android:id="@+id/tv_apr"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="10dp"
            android:text="年化收益率"
            android:id="@+id/textView2"
            android:layout_below="@+id/tv_apr"
            android:layout_centerInParent = "@+id/tv_apr"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_sold_out"
            android:id="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="#999999"
            android:text="投资期限"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/tv_day"
            android:layout_alignStart="@+id/tv_day"
            android:id="@+id/textView3" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#999999"
            android:text="28天"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <TextView
            android:layout_width="68dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_tward_grey"
            android:textSize="9dp"
            android:text="已加0.35%"
            android:paddingTop="2dp"
            android:paddingLeft="12dp"
            android:textColor="#999999"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_tward"
            android:visibility="gone"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_toEndOf="@+id/tv_title" />
    </RelativeLayout>

