<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dql.g150t.fyhs.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_min_height_56"
        android:background="@color/material_white"
        app:leftDrawable="@mipmap/icon_back"
        app:rightDrawable="@mipmap/login"
        app:title="注册"
        app:titleTextColor="@color/black"
        app:titleTextSize="@dimen/topbar_text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/user_image_small_size_40"
        android:layout_marginRight="@dimen/user_image_small_size_40"
        android:layout_marginTop="50dp"
        android:layout_weight="4"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <com.dql.g150t.fyhs.view.ClearEditText
            android:id="@+id/et_phone"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_clear"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingTop="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:hint="请设置6-16位密码"
            android:inputType="textPassword"
            android:paddingTop="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="14dp" />
        <LinearLayout
            android:id="@+id/ll_people_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_website"
                style="@style/MyEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:hint="用户类型"
                android:paddingTop="15dp"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="14dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人用户"
                android:layout_marginRight="10dp"/>
        </LinearLayout>


        <EditText
            android:id="@+id/et_invite"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:hint="填写邀请码(非必选)"
            android:paddingTop="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/btn_regist_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="295dp"
            android:layout_height="44dp"
            android:textSize="17dp"
            android:background="@drawable/red_button"
            android:text="下一步"
            android:textColor="@color/material_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></LinearLayout>


</LinearLayout>
