<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dql.g150t.fyhs.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_min_height_56"
        android:background="@color/material_white"
        app:leftDrawable="@mipmap/icon_back"
        app:title="登录"
        app:titleTextColor="@color/black"
        app:titleTextSize="@dimen/topbar_text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/small_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/user_image_small_size_40"
        android:layout_marginRight="@dimen/user_image_small_size_40"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|end">


        <com.dql.g150t.fyhs.view.ClearEditText
            android:id="@+id/et_phone"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:textColor="#999999"
            android:drawableRight="@mipmap/icon_clear"
            android:textColorHint="#999999"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_password"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:paddingTop="15dp"

                android:textColor="#999999"
                android:textColorHint="#999999"
                android:textSize="14dp" />

            <CheckBox
                android:id="@+id/cb_eye"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:scaleX="1"
                android:scaleY="1" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="295dp"
            android:layout_height="44dp"
            android:background="@drawable/red_button"
            android:text="登录"
            android:textColor="@color/material_white"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="快速注册"
            android:textColor="#EA2A2A" />
    </LinearLayout>

</LinearLayout>
